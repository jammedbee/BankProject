<Page x:Class="BankProject.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LoginPage">
    <Grid>
        <StackPanel x:Name="loginPanel" VerticalAlignment="Center">
            <TextBlock Text="Логин" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <TextBox x:Name="loginTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <TextBlock Text="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <PasswordBox x:Name="passwordPasswordBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="authorizeButton" Content="Войти" Click="authorizeButton_Click" Width="80" Height="20" Margin="5"/>
                <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="80" Height="20" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
